
# MyCODStore Environment Variables

# Application Settings
VITE_APP_NAME=MyCODStore
VITE_APP_URL=https://mycodstore.com

# WhatsApp Integration
VITE_WHATSAPP_NUMBER=+1234567890

# Admin Settings (Development Only - Use secure authentication in production)
VITE_ADMIN_USERNAME=admin
VITE_ADMIN_PASSWORD=admin123

# Analytics (Optional)
VITE_GOOGLE_ANALYTICS_ID=G-XXXXXXXXXX

# API Configuration (For future backend integration)
VITE_API_BASE_URL=https://api.mycodstore.com
VITE_API_VERSION=v1

# MongoDB (For backend integration)
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/mycodstore
JWT_SECRET=your-super-secret-jwt-key-here
JWT_EXPIRES_IN=30d

# Twilio WhatsApp API (Optional)
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_WHATSAPP_NUMBER=whatsapp:+1234567890

# Email Configuration (For order notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# Security
BCRYPT_ROUNDS=12
CORS_ORIGIN=https://mycodstore.com

# File Upload (For product images)
UPLOAD_MAX_SIZE=5242880
UPLOAD_ALLOWED_TYPES=image/jpeg,image/png,image/webp

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
